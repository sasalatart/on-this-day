{
  "repository": "git@github.com:sasalatart/on-this-day.git",
  "author": "Sebasti√°n Salata R-T <sa.salatart@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "12.13.1"
  },
  "workspaces": {
    "packages": [
      "packages/shared",
      "packages/server",
      "packages/*"
    ],
    "nohoist": [
      "**/jest"
    ]
  },
  "scripts": {
    "lint": "yarn workspaces run lint",
    "build": "yarn workspaces run build",
    "build:shared": "yarn workspace @on-this-day/shared build",
    "start": "yarn workspace @on-this-day/server start",
    "scrap": "yarn workspace @on-this-day/scraper start",
    "scrap:dev": "yarn workspace @on-this-day/scraper dev:start",
    "seed": "yarn workspace @on-this-day/server seed",
    "seed:dev": "yarn workspace @on-this-day/server dev:seed",
    "console": "yarn workspace @on-this-day/server console",
    "console:dev": "yarn workspace @on-this-day/server dev:console",
    "dev": "concurrently \"yarn:dev:*\"",
    "dev:server": "yarn workspace @on-this-day/server dev:start",
    "dev:client": "yarn workspace @on-this-day/client start",
    "dev:watch:shared": "yarn workspace @on-this-day/shared compile:watch",
    "db": "docker run -p 27017:27017 -v mongodbdata:/data/db mongo:4.2.0",
    "test:backend": "yarn build:shared && yarn workspace @on-this-day/server yarn test"
  },
  "devDependencies": {
    "@on-this-day/eslint-config": "1.0.0",
    "@types/bluebird": "^3.5.30",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.0.0",
    "concurrently": "^5.1.0",
    "prettier": "^2.0.1",
    "ts-node": "^8.8.2",
    "typescript": "~3.8.3"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "lodash": "^4.17.15"
  }
}
