{
  "name": "@on-this-day/server",
  "version": "1.0.0",
  "main": "build/index.js",
  "author": "Sebasti√°n Salata R-T <sa.salatart@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf ./build",
    "build": "yarn clean && yarn compile",
    "compile": "yarn codegen && tsc && yarn copy:graphql && yarn copy:seeds",
    "codegen": "graphql-codegen --config codegen.yml",
    "copy:graphql": "cp src/type-defs/*.graphql build/type-defs",
    "copy:seeds": "cp src/db/seeds/data.json build/db/seeds/data.json",
    "test": "NODE_ENV=test jest src --runInBand",
    "start": "yarn seed && node build",
    "dev": "yarn compile && yarn seed && nodemon",
    "seed": "node build/db/seeds"
  },
  "dependencies": {
    "@on-this-day/shared": "^1.0.0",
    "apollo-server-express": "^2.12.0",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "graphql-import": "^1.0.2",
    "graphql-tools": "^4.0.7",
    "i18next": "^19.4.1",
    "mongoose": "^5.9.6"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.13.2",
    "@graphql-codegen/cli": "^1.13.2",
    "@graphql-codegen/introspection": "^1.13.2",
    "@graphql-codegen/typescript": "1.13.2",
    "@graphql-codegen/typescript-resolvers": "1.13.2",
    "@shelf/jest-mongodb": "^1.1.5",
    "@types/bluebird": "^3.5.33",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^26.0.20",
    "@types/mongoose": "^5.7.7",
    "@types/nanoid": "^2.1.0",
    "@types/rosie": "^0.0.37",
    "apollo-server-testing": "^2.12.0",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^26.6.3",
    "nanoid": "^3.1.3",
    "nodemon": "^2.0.2",
    "rosie": "^2.0.1",
    "ts-jest": "^26.4.4"
  }
}
